.main-chat
  .group-info
    .group-info__left
      .group-info__left__current-group
        = @group.name
      .group-info__left__member-list
        - @group.users.each do |user|
          =user.name
    = link_to edit_group_path(@group) do
      .group-info__edit Edit
  .message-list
    .message
      = render @messages
  .message-form
    = form_for [@group, @message] do |f| 
      .new-message
        .input-box
          = f.text_field :content, class: "input-box__text", placeholder: "type a message"
          = f.label :image, class: "input-box__img" do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: "input-box__img__file"
        = f.submit 'Send', class: "submit-btn"
