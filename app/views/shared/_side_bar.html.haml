.side-bar
  .user-name
    .user-name__top-items
      .user-name__top-items__name
        = current_user.name
      .user-name__top-items__icons
        .user-name__top-items__icons__edit
          = link_to new_group_path, class:"editbtn" do
            = icon('fas', 'edit')
        .user-name__top-items__icons__cog
          = link_to edit_user_path(current_user), class:"cogbtn"do
            = icon('fas', 'cog')
  .group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .list-name
          = group.name
        .list-message
          = group.show_last_message